@using White.Data;
 @using White.Areas.Admin;

@model Product
@{
    ViewData["title"] = "Kayıt Güncelleme";
}
<div class="card">
    <div class="card-body">
        <h2>
            @ViewData["title"]
        </h2>

   
       <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="Image" />
           
              <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Ürün adını yazınız...">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Piece" class="form-label"></label>
                <input asp-for="Piece" class="form-control" />
                <span asp-validation-for="Piece" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="PriceText" class="form-control" />
                <span asp-validation-for="PriceText" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <div class="py-3">
                    <img src="@Model.Image" height="240" />
                </div>
                <div class="text-info">(Değiştirmek istiyorsanız seçiniz)</div>
                <label for="formFile" class="form-label" asp-for="Image"></label>
                <input class="form-control" type="file" id="imageFile" name="imageFile">
            </div>
            <div class="mb-3">
                <label asp-for="SupplierName" class="form-label"></label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea asp-for="Description" class="summernote"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
          
            <div class="mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control mb-2" asp-items="@ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <hr />
              <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-primary" asp-action="Index">İptal</a>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
 

      <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        $(() => {
            $('.summernote').summernote({
                height: 200
            });
        })
    </script>
}

