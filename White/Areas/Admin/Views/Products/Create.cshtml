@using White.Areas.Admin
 @using White.Data;


@model Product

@{
    ViewData["title"] = "Kayıt Ekleme";
}
<div class="card">
    <div class="card-body">
        <h2>
            @ViewData["title"]
        </h2>



    <form method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Ürün adını yazınız...">
                <span asp-validation-for="Name"></span>
            </div>
         
            <div class="mb-3">
                <label asp-for="Piece" class="control-label"></label>
                <input asp-for="Piece" class="form-control" />
                <span asp-validation-for="Piece" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PriceText" class="control-label"></label>
                <input asp-for="PriceText" class="form-control" />
                <span asp-validation-for="PriceText" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label" asp-for="Image"></label>
                <input class="form-control" type="file" id="imageFile" name="imageFile">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SupplierName" class="control-label"></label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <input type="text" asp-for="Description" class="summernote"></input>
                <span asp-validation-for="Description"></span>
            </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="CategoryId"></label>
                    <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    </select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
       
             
                    <button type="submit" class="btn btn-primary">
                        Kaydet
                    </button>
                    <a class="btn btn-primary" asp-action="Index">İptal</a>
            
        </form>
       
    </div>
</div>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />


   

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<script>
    $(() => {
        $('.summernote').summernote({
            height: 200
        });
    })
</script>
}


