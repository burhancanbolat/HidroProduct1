@using White.Data;

@model Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group d-inline">
                <input type="submit" value="Düzenle" class="btn btn-primary " />
                <div class="d-inline">
                    <a asp-action="Index" class="btn btn-primary text-decoration-none">Listeye geri dön</a>
                </div>

            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
